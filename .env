# .env.example

# Flask settings
FLASK_APP=app.py
FLASK_DEBUG=True

# GameStore settings
# GAMESTORE_CACHE_DIR=./cache
# GAMESTORE_CACHE_TIMEOUT=3600
# GAMESTORE_DEFAULT_SITE=gamepciso

# --- Proxy Settings ---
# Enable or disable proxy usage (True/False)
GAMESTORE_USE_PROXIES=False
# --- Path to static proxy file is no longer used ---
# GAMESTORE_PROXY_FILE=proxy.json
# --- New settings for free-proxy ---
# Number of proxies to fetch on startup
GAMESTORE_PROXY_FETCH_COUNT=10
# Require proxies to support HTTPS (True/False)
GAMESTORE_PROXY_REQUIRE_HTTPS=True
# --- Max retries remains ---
GAMESTORE_PROXY_MAX_RETRIES=3

# --- Rate Limiter Config ---
# GAMESTORE_API_RATELIMIT_ENABLED=True
# GAMESTORE_API_RATELIMIT_GAMES=100 per hour
# GAMESTORE_API_RATELIMIT_GAME_DETAILS=60 per hour
# GAMESTORE_API_RATELIMIT_SEARCH=120 per hour
# GAMESTORE_API_RATELIMIT_SITES=200 per hour